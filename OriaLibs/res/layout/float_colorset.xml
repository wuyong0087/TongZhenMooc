<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_option_type"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_marginLeft="4dp"
            android:id="@+id/color_black"
            android:layout_width="@dimen/record_menu_size"
            android:layout_height="@dimen/record_menu_size"
            android:background="@drawable/color_black_btn_bg" />

        <ImageButton
            android:layout_marginLeft="4dp"
            android:id="@+id/color_blue"
            android:layout_width="@dimen/record_menu_size"
            android:layout_height="@dimen/record_menu_size"
            android:background="@drawable/color_blue_btn_bg" />

        <ImageButton
            android:layout_marginLeft="4dp"
            android:id="@+id/color_red"
            android:layout_width="@dimen/record_menu_size"
            android:layout_height="@dimen/record_menu_size"
            android:background="@drawable/color_red_btn_bg" />

        <ImageButton
            android:layout_marginLeft="4dp"
            android:id="@+id/color_yellow"
            android:layout_width="@dimen/record_menu_size"
            android:layout_height="@dimen/record_menu_size"
            android:background="@drawable/color_yellow_btn_bg" />

        <ImageButton
            android:layout_marginLeft="4dp"
            android:id="@+id/color_green"
            android:layout_width="@dimen/record_menu_size"
            android:layout_height="@dimen/record_menu_size"
            android:background="@drawable/color_green_btn_bg" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/color_white"
            android:layout_width="@dimen/record_menu_size"
            android:layout_height="@dimen/record_menu_size"
            android:background="@drawable/color_white_btn_bg" />

        <ImageButton
            android:layout_marginLeft="4dp"
            android:id="@+id/color_purple"
            android:layout_width="@dimen/record_menu_size"
            android:layout_height="@dimen/record_menu_size"
            android:background="@drawable/color_purple_btn_bg" />
    </LinearLayout>

</RelativeLayout>