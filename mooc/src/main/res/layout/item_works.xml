<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--top info-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/mlm_press" />

        <ImageView
            android:id="@+id/iv_level_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/iv_header"
            android:layout_alignRight="@id/iv_header"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_header"
            android:text="321"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname"
            android:layout_toRightOf="@id/iv_header"
            android:text="123"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_curse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_oval_gray_stroke_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="sad" />
    </RelativeLayout>

    <!--works info-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/mlm" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_cover"
            android:text="321"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@id/iv_cover"
            android:text="@string/works_lenth" />

        <LinearLayout
            android:layout_alignBottom="@id/iv_cover"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration"
            android:layout_toRightOf="@id/iv_cover">

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/works_options_icon_width"
                    android:layout_height="@dimen/works_options_icon_height"
                    android:src="@drawable/shares" />

                <TextView
                    android:id="@+id/tv_shares"
                    android:text="0"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/works_options_icon_width"
                    android:layout_height="@dimen/works_options_icon_height"
                    android:src="@drawable/comments" />

                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_marginLeft="3dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/works_options_icon_width"
                    android:layout_height="@dimen/works_options_icon_height"
                    android:src="@drawable/likes" />

                <TextView
                    android:id="@+id/tv_likes"
                    android:layout_marginLeft="3dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>